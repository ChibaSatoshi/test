<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<constant name="struts.devMode" value="true"/>
<package name="com.internousdev.chiba.action" extends="struts-default">

<action name="HomeAction" class="com.internousdev.chiba.action.HomeAction" method="execute">
<result name="login">login.jsp</result>
<result name="success">buyItem.jsp</result>
</action>

<action name="GoHomeAction" class="com.internousdev.chiba.action.GoHomeAction" method="execute">
<result name="success">home.jsp</result>
</action>

<action name="LoginAction" class="com.internousdev.chiba.action.LoginAction" method="execute">
<result name="success">buyItem.jsp</result>
<result name="error">login.jsp</result>
</action>

<action name="UserCreateAction" class="com.internousdev.chiba.action.UserCreateAction" method="execute">
<result name="success">userCreate.jsp</result>
</action>

<action name="UserCreateConfirmAction" class="com.internousdev.chiba.action.UserCreateConfirmAction" method="execute">
<result name="success">userCreateConfirm.jsp</result>
<result name="error">userCreate.jsp</result>
</action>

<action name="UserCreateCompleteAction" class="com.internousdev.chiba.action.UserCreateCompleteAction" method="execute">
<result name="success">userCreateComplete.jsp</result>
</action>

<action name="BuyItemAction" class="com.internousdev.chiba.action.BuyItemAction" method="execute">
<result name="success">buyItemConfirm.jsp</result>
</action>

<action name="BuyItemConfirmAction" class="com.internousdev.chiba.action.BuyItemConfirmAction" method="execute">
<result name="success">buyItemComplete.jsp</result>
<result name="back">buyItem.jsp</result>
</action>

<action name="MyPageAction" class="com.internousdev.chiba.action.MyPageAction" method="execute">
<result name="success">myPage.jsp</result>
<result name="error">login.jsp</result>
</action>

<action name="LogoutAction" class="com.internousdev.chiba.action.LogoutAction" method="execute">
<result name="success">home.jsp</result>
</action>

<action name="ManagerPageAction" class="com.internousdev.chiba.action.ManagerPageAction" method="execute">
<result name="success">managerPage.jsp</result>
</action>

<action name="ItemCreateAction" class="com.internousdev.chiba.action.ItemCreateAction" method="execute">
<result name="success">itemCreate.jsp</result>
</action>

<action name="ItemCreateConfirmAction" class="com.internousdev.chiba.action.ItemCreateConfirmAction" method="execute">
<result name="success">itemCreateConfirm.jsp</result>
<result name="error">itemCreate.jsp</result>
</action>

<action name="ItemCreateCompleteAction" class="com.internousdev.chiba.action.ItemCreateCompleteAction" method="execute">
<result name="success">itemCreateComplete.jsp</result>
</action>

<action name="UserListAction" class="com.internousdev.chiba.action.UserListAction" method="execute">
<result name="success">userList.jsp</result>
</action>

<action name="UserListInfoAction" class="com.internousdev.chiba.action.UserListInfoAction" method="execute">
<result name="success">userListInfo.jsp</result>
</action>

</package>
</struts>